<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit  <%=blog.name%></div>
    
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST"> <!--?_method=PUT is necessay to override the POST method -->
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%=blog.name%>" name="blog[name]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" value="<%=blog.image%>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea> 
            <!--<input type="text" placeholder="Blog post goes here" name="blog[body]">-->
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
</div>

<% include partials/footer %> 